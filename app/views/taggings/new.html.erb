<!-- Validation failure messages -->
<% if @tagging.errors.any? %>
  <% @tagging.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Tagging</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_tagging" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for player_id -->
      <div class="form-group">
        <label for="player_id" class="control-label">
          Player
        </label>

        <%= select_tag(:player_id, options_from_collection_for_select(Player.all, :id, :name, @tagging.player_id), :class => "form-control") %>
      </div>

      <!-- Label and input for tag_id -->
      <div class="form-group">
        <label for="tag_id" class="control-label">
          Tag
        </label>

        <%= select_tag(:tag_id, options_from_collection_for_select(Tag.all, :id, :tag, @tagging.tag_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Tagging
      </button>
      or
      <a href="/taggings">Cancel</a>
    </form>
  </div>
</div>
