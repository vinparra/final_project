<div class="page-header">
  <h3>Projection #<%= @projection.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Player</dt>
      <dd>
        <% if @projection.player.present? %>
          <a href="/players/<%= @projection.player_id %>">
            <%= @projection.player.name %>
          </a>
        <% end %>
      </dd>

      <dt>Source</dt>
      <dd><%= @projection.source %></dd>

      <dt>Year</dt>
      <dd><%= @projection.year %></dd>

      <dt>At bats</dt>
      <dd><%= @projection.at_bats %></dd>

      <dt>Home runs</dt>
      <dd><%= @projection.home_runs %></dd>

      <dt>Runs batted in</dt>
      <dd><%= @projection.runs_batted_in %></dd>

      <dt>Stolen bases</dt>
      <dd><%= @projection.stolen_bases %></dd>

      <dt>Runs</dt>
      <dd><%= @projection.runs %></dd>

      <dt>Avg</dt>
      <dd><%= @projection.avg %></dd>

      <dt>Innings pitched</dt>
      <dd><%= @projection.innings_pitched %></dd>

      <dt>Wins</dt>
      <dd><%= @projection.wins %></dd>

      <dt>Saves</dt>
      <dd><%= @projection.saves %></dd>

      <dt>Era</dt>
      <dd><%= @projection.era %></dd>

      <dt>Whip</dt>
      <dd><%= @projection.whip %></dd>

      <dt>Strikeouts</dt>
      <dd><%= @projection.strikeouts %></dd>

      <dt>Hits</dt>
      <dd><%= @projection.hits %></dd>

      <dt>On base percentage</dt>
      <dd><%= @projection.on_base_percentage %></dd>

      <dt>Slugging percentage</dt>
      <dd><%= @projection.slugging_percentage %></dd>

      <dt>On base plus slugging</dt>
      <dd><%= @projection.on_base_plus_slugging %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/projections" class="btn btn-primary">
        Back
      </a>
      <a href="/projections/<%= @projection.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_projection/<%= @projection.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
