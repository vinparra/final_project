        </label>

        <input type="text" id="hr" name="hr" placeholder="Hr" class="form-control" value="<%= @projection.hr %>">
      </div>

      <!-- Label and input for rbi -->
      <div class="form-group">
        <label for="rbi" class="control-label">
          Rbi
        </label>

        <input type="text" id="rbi" name="rbi" placeholder="Rbi" class="form-control" value="<%= @projection.rbi %>">
