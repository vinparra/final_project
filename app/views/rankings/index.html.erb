<div class="page-header">
  <h1>
    Rankings
    <a href="/rankings/new" class="btn btn-lg btn-success">New Ranking</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Player</th>
        <th>Source</th>
        <th>Overall rank</th>
        <th>Position rank</th>
        <th>Dollar value</th>
        <th>Rank best</th>
        <th>Rank worst</th>
        <th>Rank average</th>
        <th>Rank std dev</th>
        <th>Avg draft position</th>
        <th>Actions</th>
      </tr>

      <% @rankings.each do |ranking| %>
      <tr>
        <td><%= ranking.player.name %></td>
        <td><%= ranking.source %></td>
        <td><%= ranking.overall_rank %></td>
        <td><%= ranking.position_rank %></td>
        <td><%= ranking.dollar_value %></td>
        <td><%= ranking.rank_best %></td>
        <td><%= ranking.rank_worst %></td>
        <td><%= ranking.rank_average %></td>
        <td><%= ranking.rank_std_dev %></td>
        <td><%= ranking.avg_draft_position %></td>
        <td>
          <a href="/rankings/<%= ranking.id %>" class="btn btn-primary">Show</a>
          <a href="/rankings/<%= ranking.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_ranking/<%= ranking.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
