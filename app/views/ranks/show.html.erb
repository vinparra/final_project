<div class="page-header">
  <h3>Rank #<%= @rank.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @rank.user.present? %>
          <a href="/users/<%= @rank.user_id %>">
            <%= @rank.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Player</dt>
      <dd>
        <% if @rank.player.present? %>
          <a href="/players/<%= @rank.player_id %>">
            <%= @rank.player.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/ranks" class="btn btn-primary">
        Back
      </a>
      <a href="/ranks/<%= @rank.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_rank/<%= @rank.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
